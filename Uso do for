#include <iostream>
#include <math.h>
#include <string>
#include <limits>
#include <vector>

using namespace std;

int main()
{
    int num;
//variavel tipo inteiro
    int contador;
//variavel contador tipo inteiro

    for(contador=1;contador<=100;contador++){
//for laço de repetição(variavel geralmente 1 ou 0; condição quando for menor ou igual a 100; incremmentar mais um quando a condição é verdadeira)
        cout<<contador<<endl;
//cout vai imrprimir a repetição
    }


       return 0;
//codigo funcionou retorna 0

                                                                    ATIVIDADE DE FOR


                            // crie um programa que peça ao usuario para entrar com 4 notas de um aluno e
                               //calcule sua media aritmetica, e retorne o valor dessa media calculada


    int cont;
    //viariavel contadora
    float nota, media, total;
    //tres variavel tipo float
    total= 0;
    //variavel total é 0 por que aluno começa sem nota

    for(cont=1; cont<=4; cont++)
      //precisa capturar a nota quatro vezes de 1 a 4 incrementando mais um.
        {
        cout<<"Digite sua nota: ";
    //imprimir a pergunta da nota
        cin>> nota;
    //armezenar na variavel nota
        total= total + nota;
    //total= total(0) +  a nota digitada
    }

    media= total / 4;
    //medoa da nota dividida por 4
    cout<<"Sua media "<<media;
    //imprimir a media

    return 0;





LAÇO FOR ENCADEADO
//irá fazer o codigo rodar mais vezes.

int cont;
//variavel contador tipo inteiro

char cod;
//variavel char que irá receber uma letra

float nota, media, total;
//variavel float que vai ter nota media e total.

total=0;
//total é igual á 0, pois o aluno começa sem nota
cod='C';
//e variavel caracter recene c

while(cod !='F'){
//while é a repetição, caso for diferente de c irá repetir o codigo novamente.

    for(cont = 1; cont<=4; cont++){
//for repetição, contador começa em 1 e bai até 4 e incrementa mais um.

        cout<<"Digite a nota: ";
//cout vai imprimir a pergunta 4x na tela.
        cin>>nota;
//armazenar dentro da variavel nota.

        total= total + nota;
//total= total que é 0 somado com a nota que o aluno digitou.
    }

    media=total / 4;
//media= total divido por 4

    cout<<"Sua media e: "<<media<<endl;
//cout irá imprimir a media.

    total=0;
//retornar o valor de total a 0
    nota=0;
//retornar o valor de nota a 0
    cout<<"Deseja calcular a media de mais algum aluno,Pressione qualquer tecla para prosseguir Se nao digite F para finalizar.";
//irá perguntar se deseja calcular de outro aluno, se não digitar f para finalizar o programa.

    cin>>cod;
//retorna a informação para od

}

    return 0;

