//PARAMETROS E ARGUMENTOS 

void minhafuncao( string nome){
//Função chamada de minha função, que vai receber como parametro um nome do tipo string.
    cout<<nome<<endl;
}

int main()
{
    minhafuncao("matheus");
    //chamando a função e adicionando o nome.
    
    minhafuncao("kelly");
    //chamando a função e adicionando o nome.

    minhafuncao("thiago");
    //chamando a função e adicionando o nome.
    
    //Nome entre "" São argumentos.




    return 0;
}


EXEMPLO 1:
#include <iostream>

using namespace std;


void minhafuncao( string nome){
//Função chamada de minha função, que vai receber como parametro um nome do tipo string.
    cout<<nome<<endl;
    cout<<"Olá";
}

string nome;

int main()
{
    setlocale(LC_ALL,"");

    cout<<"Digite seu nome: ";
    cin>> nome;

    minhafuncao(nome);


    return 0;
}
